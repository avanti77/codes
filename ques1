function calculate(){

    let num1=(document.getElementById("num1") as HTMLInputElement).value.trim();
    let num2=(document.getElementById("num2") as HTMLInputElement).value.trim();
    let num3=(document.getElementById("num3") as HTMLInputElement).value.trim();
    let num4=(document.getElementById("num4") as HTMLInputElement).value.trim();
    let num5=(document.getElementById("num5") as HTMLInputElement).value.trim();

    if(!num1 || !num2 || !num3 || !num4 || !num5)
    {
        document.getElementById("errorMessage").innerHTML="enter all the numbers";
    }
    else 
    {
        let total=0;
        let nums:number[] =[parseInt(num1),parseInt(num2),parseInt(num3),parseInt(num4),parseInt(num5)];
        let list:number[]=[];
        for(let n of nums)
        {
            if(!isNaN(n))
            {
                if(n % 2===0)
                {
                    total+=n;
                }
                if(n>5)
                {
                    list.push(n);
                }
            }
            
        }

        document.getElementById("sumOfEven").innerHTML="Sum of even numbers: "+total;

        let output="Numbers greater than 5: ";
        document.getElementById("numbersGreaterThan5").innerHTML=output+list.join(", ");
    }

}
