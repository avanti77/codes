        <button onclick="calculate()" id="calculateButton">Calculate</button><br>
        <div id="errorMessage"></div><br>

        <div id="maximumNo"></div><br>

        <div id="minimumNo"></div><br>

        <div id="sumOfAllNumbers"></div>

        
        

