function calculate(){

    let num1=(document.getElementById("num1") as HTMLInputElement).value;
    let num2=(document.getElementById("num2") as HTMLInputElement).value;
    let num3=(document.getElementById("num3") as HTMLInputElement).value;
    let num4=(document.getElementById("num4") as HTMLInputElement).value;
    let num5=(document.getElementById("num5") as HTMLInputElement).value;

    if(!num1.trim() || !num2.trim() || !num3.trim() || !num4.trim() || !num5.trim()) document.getElementById("errorMessage").innerHTML="Enter all the numbers";
    else{let nums:number[]=[parseInt(num1),parseInt(num2),parseInt(num3),parseInt(num4),parseInt(num5)];

    document.getElementById("maximumNo").innerHTML="<b>Maximum number: </b>"+Math.max(...nums);
    document.getElementById("minimumNo").innerHTML="<b>Minimum number: </b>"+Math.min(...nums);

    let total=0;
    for(let i of nums)
    {
        total+=i;
    }
    document.getElementById("sumOfAllNumbers").innerHTML="<b>Sum of all numbers: </b>"+total;
    }
}
